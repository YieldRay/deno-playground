# Spacefile Docs: https://go.deta.dev/docs/spacefile/v0
v: 0
micros:
  - name: frontend
    primary: true
    public: true
    engine: static
    src: ./frontend
    serve: .

  - name: backend
    public: true
    src: ./backend
    path: api
    engine: custom
    commands:
      - curl https://github.com/denoland/deno/releases/download/v1.44.2/deno-x86_64-unknown-linux-gnu.zip -kLo deno.zip
      - unzip deno.zip && rm deno.zip
    run: DENO_DIR=/tmp/deno ./deno run -A main.ts
    dev: deno run -A main.ts
